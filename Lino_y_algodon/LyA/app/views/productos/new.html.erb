<h1>Nuevo producto</h1>

<%= form_with(model: @producto, local: true) do |form| %>

  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.number_field :precio, step: 0.01, min: 0%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

